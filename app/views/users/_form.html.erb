<%= form_for @user, layout: :basic do |f| %>
  <%= render 'shared/error_messages' %>
  
  <%= f.text_field     :fname, label: 'First Name', placeholder: 'First Name' %>
  <%= f.text_field     :lname, label: 'Last Name', placeholder: 'Last Name' %>
  <%= f.text_field     :emp_no, label: 'Employee Number',
                        placeholder: 'Employee Number' %>
  <%= f.email_field    :email %>
  <%= f.number_field   :store_number, options: { label: 'Store Number', placeholder: 'Store Number' } %> 
  <%= f.password_field :password %>
  <%= f.password_field :confirm_password %>  
  <%= f.submit 'Save'%> 
<% end %>

