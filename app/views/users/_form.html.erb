<%= form_for @user, layout: :basic do |f| %>
  <%= render 'shared/error_messages' %>
  
  <%= f.text_field     :fname, label: 'First Name', placeholder: 'First Name' %>
  <%= f.text_field     :lname, label: 'Last Name', placeholder: 'Last Name' %>
  <%= f.text_field     :emp_no, label: 'Employee Number',
                        placeholder: 'Employee Number' %>
  <%= f.email_field    :email %>
  <%= f.select(:store_number, 
                options_for_select([['4453', 4453],['11960', 11960],
                                  ['11785', 11785],['18056', 18056]]), 
                class: 'form-control') %>
<%= f.password_field :password %>
  <%= f.password_field :password_confirmation %>  
  <%= f.submit 'Save'%> 
<% end %>

