<div class="container">
  <div class="row"
    <div class="col-sm-8">
      <table class="table">
        <tr>
          <th>First Name</th>
          <th>Last Name</th>
          <th>Employee #</th>
          <th>Email</th>
          <th><%= icon :pencil %></th>
          <th><%= icon :remove %></th>
        </tr> 
        <tbody>
          <% @users.each do |user| %>  
            <tr>
              <td><%= user.fname %></td>
              <td><%= user.lname %></td>
              <td><%= user.emp_no %></td>
              <td><%= user.email %></td>
              <td><%= link_to icon(:pencil), edit_user_path(user) %></span></td>
              <td><%= link_to icon(:remove), user, method: :delete, 
                                   data: { confirm: 'Are you sure?' } %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
