<% if flash[:notice] %>
  <div id="flash-message" class="row alert alert-warning"><%= flash[:notice] %></div>
<% end %>
<% if flash[:error] %>
  <div id="flash-message" class="row alert alert-danger"><%= flash[:error] %></div>
<% end %>
<% if flash[:danger] %>
  <div id="flash-message" class="row alert alert-danger"><%= flash[:danger] %></div>
<% end %>
<% if flash[:success] %>
  <div id="flash-message" class="row alert alert-success"><%= flash[:success] %></div>
<% end %>
