<%= navbar position: :top do %>
  <%= vertical do %>
    <%= link_to 'Home', root_path %>
  <% end %>
  <%= horizontal do %> 
    <%= nav class: 'navbar-right' do %> 
      <% if logged_in? %>
        <span class="text-muted navbar-text">
          <% unless $current_manager.nil? %>
            Currently in charge: <%= $current_manager.fname %>
          <% end %>
        </span>
        <%= link_to 'Take Charge', current_manager_path %>
        <%= link_to 'Waste', foods_path %>
        <%= link_to current_user.fname, user_path(current_user.id), class: 'current_user', id: current_user.id %> 
        <% if current_user.admin? %>
          <%= link_to 'Users', users_path %>
        <% end %> 
        <%= link_to "Log out", logout_path, method: "delete" %>
      <% else %>
        <%= link_to "Log in", login_path %>
      <% end %>
    <% end %>
  <% end %>
<% end %>
