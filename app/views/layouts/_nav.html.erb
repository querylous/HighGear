<%= navbar position: :top do %>
  <%= vertical do %>
    <%= link_to 'Home', root_path %>
  <% end %>
  <%= horizontal do %> 
    <%= nav class: 'navbar-right' do %> 
      <% if logged_in? %>
        <%= link_to 'Waste', foods_path %>
        <%= link_to current_user.fname, user_path(current_user.id), class: 'current_user', id: current_user.id %> 
        <%= link_to "Log out", logout_path, method: "delete" %>
      <% else %>
        <%= link_to "Log in", login_path %>
      <% end %>
    <% end %>
  <% end %>
<% end %>
